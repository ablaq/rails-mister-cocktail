<h1><%= @cocktail.name %></h1>
<% @cocktail.doses.each do |dose| %>
<h2><%= dose.ingredient.name %></h2>
<p><%= dose.description %></p>
<%= link_to "Delete the dose", dose_path(dose),
  method: :delete,
  data: {confirm: "Are you sure"} %>
<% end%>
<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %>
<%= link_to "back to cocktails", cocktails_path %>

